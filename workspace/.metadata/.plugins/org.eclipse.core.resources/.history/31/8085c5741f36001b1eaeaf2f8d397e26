package player_Monster;
//Monster(name lv hp attack armor exp money)

public class BattleField {
	Monster m0 = new Monster(AllText.monsterNames[0],AllText);
	Monster m1 = new Monster(AllText.monsterNames[1],AllText);
	Monster m2 = new Monster(AllText.monsterNames[2],AllText);
	Monster monster;
	void field1(Player player){	
		monster = m0;
		battle(player,monster);
	}
	void field2(Player player){	
		monster = (int)(Math.random()*2)==1? m0 : m1;
		battle(player,monster);
	}
	void field3(Player player){	
		monster = (int)(Math.random()*2+1)==2? m1 : m2;
		battle(player,monster);
	}
	
	void battle(Player player,Monster m0){
		battle : while(true){
			player.attack(m0);
			if(m0.hp <= 0){
				AllText.killed(m0.name);
				player.getExp(m0.exp);
				player.getGold(m0.money);
				AllText.pressAny();
				break battle;
			}
			m0.attack(player);
		}
	}

}
