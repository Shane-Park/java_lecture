
public class Testing {
	public static void main(String[] args) {
		int num= 626331;
		int answer = 0;
		
		while(num != 1 && answer <=500){
			if(num%2 ==0)
				num /= 2;
			if(num%2 != 1)
				num = num *3 +1;
			answer++;
		}
		if(answer > 500)
			answer = -1;
		System.out.println(answer);
		
	}
	
}


