			break;
		}
		System.out.printf("     ì¥ì°©ì¤‘ : %s %s\n",player.equips[equipSelect].name,player.equips[equipSelect].statsToString());
		for(int i=0; i<list.length; i++){
			System.out.printf("%d. %s %s\n",i+1,list[i].name,list[i].statsToString());
		}
		AllText.printBar();
	}

