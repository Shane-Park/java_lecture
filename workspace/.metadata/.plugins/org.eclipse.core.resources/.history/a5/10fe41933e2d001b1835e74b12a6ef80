package d_array;

import java.util.Arrays;

public class Homework {

	public static void main(String[] args) {
		// 1 ~ 10 사이의 랜덤값을 500번 생성하고, 각 숫자가 생성된 횟수를 출력해주세요.
		// 문제 : 위 문제의 최소값(1), 최대값(10), 발생 횟수(500)을 입력 받아 각 숫자가 생성된 횟수를 출력해주세요.
		
		int min, max, size;
		Scanner sc = new Scanner(System.in);
		
		int[] array = new int[size];
		int[] array_count = new int[max];
		
		for(int i=0; i<array.length; i++){
			array[i] = (int)(Math.random()*10)+1;
			array_count[array[i]-1]++;	// 배열 번호는 0~9 이지만 생성된 값은 1~10 이므로. 
		}
		
		System.out.println(Arrays.toString(array));
		System.out.println(Arrays.toString(array_count));
		
//		int sum=0;                                 //	array_count		//
//		for(int i=0; i<array_count.length; i++)    //		총합 500개		//
//			sum += array_count[i];                 //		맞는지 확인용	//
//		System.out.println(sum);                   //		테스팅 코드		//
	
	
	}

}
