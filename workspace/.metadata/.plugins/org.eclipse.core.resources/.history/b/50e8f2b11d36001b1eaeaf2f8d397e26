package player_Monster;

public class BattleField {
	Monster m0 = new Monster(AllText.monsterNames[0],AllText.monsterLevels[0]);
	Monster m1 = new Monster(AllText.monsterNames[0],AllText.monsterLevels[0]);
	Monster monster;
	void field1(Player player){	
		monster = m0;
		battle(player,monster);
	}
	void field2(Player player){	
		monster = Math.random()*2==1? m0 : m1;
		battle(player,monster);
	}
	
	void battle(Player player,Monster m0){
		battle : while(true){
			player.attack(m0);
			if(m0.hp <= 0){
				AllText.killed(m0.name);
				player.getExp(m0.exp);
				player.getGold(m0.money);
				AllText.pressAny();
				break battle;
			}
			m0.attack(player);
		}
	}

}
