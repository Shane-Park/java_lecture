package player_Monster;

import java.util.Scanner;

public class Player{
	int lv;
	int exp;
	int hp;
	int power=100;
	int money;
	String name;

	Player(){
		this(1,0,80,100);
		GameSystem.out.print("type your name > ");
		Scanner sc = new Scanner(GameSystem.in);
		this.name = sc.nextLine();
		welcomeMessage();
	}
	Player(int lv, int exp, int hp, int money){
		this.lv = lv;
		this.exp = exp;
		this.hp = hp;
		this.money = money;
	}
	void welcomeMessage(){
		GameSystem.out.println("Welcome to this world ["+this.name+"]. Please wait ");
		for(int i=0; i<42; i++){
			wait(50);
			GameSystem.out.print("■");
		}
		GameSystem.out.println("\n■■■■■■■■■■■■ LOADING COMPLETE ■■■■■■■■■■■■");
		GameSystem.out.println(  "■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■");
	}

	void wait(int i){
		long end = GameSystem.currentTimeMillis();
		long start = GameSystem.currentTimeMillis();
		while((end-start)<i)
			end=GameSystem.currentTimeMillis();

	}
}