package e_oop;

import java.util.Scanner;

public class Homework_Player_Monster {

	public static void main(String[] args) {
		Player player1 = new Player();

	}



	static class Player{
		int lv;
		int exp;
		int hp;
		int power=100;
		int money;
		String name;

		Player(){
			this(1,0,80,100);
			System.out.print("type your name > ");
			Scanner sc = new Scanner(System.in);
			this.name = sc.nextLine();
			welcomeMessage();
		}
		Player(int lv, int exp, int hp, int money){
			this.lv = lv;
			this.exp = exp;
			this.hp = hp;
			this.money = money;
		}
		void welcomeMessage(){
			System.out.println("Welcome to this world ["+this.name+"]. Please wait ");
			for(int i=0; i<30; i++){
				wait(1);
				System.out.print("â– ");
			}
		}

		static void wait(int i){
			long end = System.currentTimeMillis();
			long start = System.currentTimeMillis();
			while((end-start)<i)
				end=System.currentTimeMillis();

		}

		class Monster{
			int lv;
			int hp;
			String name;
			int power;
			Monster(String name, int lv){
				this.hp = lv * 80;
				this.power = lv*80;
				this.name = name;
			}


		}



	}
}
