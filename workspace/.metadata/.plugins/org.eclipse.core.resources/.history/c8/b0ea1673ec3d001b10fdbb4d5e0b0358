package i_collection;

import java.util.ArrayList;
/*

 * 우리반 모두의 국어, 영어, 수학, 사회, 과학, Oracle, Java 점수를

 * 0 ~ 100까지 랜덤으로 생성해주시고, 아래와 같이 출력해주세요.

 * 

 * 			국어		영어		수학		사회		과학		Oracle	Java	합계		평균		석차

 * 홍길동		90		90		90		90		90		90		90		630		90.00	1

 * 홍길동		90		90		90		90		90		90		90		630		90.00	1

 * 홍길동		90		90		90		90		90		90		90		630		90.00	1

 * 홍길동		90		90		90		90		90		90		90		630		90.00	1

 * 홍길동		90		90		90		90		90		90		90		630		90.00	1

 * 과목합계	450		450		450		450		450		450		450

 * 과목평균	90.00	90.00	90.00	90.00	90.00	90.00	90.00

 */
public class Score {

	public static void main(String[] args) {

		//String[] names = {"정지수", "김혜정", "송수미", "이현기", "진예은", "윤지혜", "양지수", "정이삭", "김도윤", "박세현", "김보현", "오세일", "원정훈",
			//	"장병길", "문선준", "배수진","진유리", "김지훈", "김동익", "임태준", "이진수", "최희수", "박초원", "전형섭", "김보미"};
//		String[] subjects = {"국어", "영어", "수학", "사회", "과학", "Oracle", "Java"};

		ArrayList<ArrayList<Integer>> list = new ArrayList<>();		
		ArrayList<String> names = new ArrayList<>();
		ArrayList<String> subjects = new ArrayList<>();
		
		names.add("");
		names.add("");
		names.add("");
		names.add("");
		names.add("");
		names.add("");
		names.add("");
		names.add("");
		names.add("");
		names.add("");
		names.add("");
		names.add("");
		names.add("");
		names.add("");
		names.add("");
		names.add("");
		names.add("");
		names.add("");
		names.add("");
		names.add("");
		names.add("");
		names.add("");
		names.add("");
		names.add("");
		names.add("");

		for(int i=0; i<names.length; i++){	               
			ArrayList<Integer> _list = new ArrayList<>();
			int sum = 0;
			for(int j=0; j<subjects.length; j++){          
				_list.add((int)(Math.random() * 100)+1);     
				sum+= _list.get(j);
			}
			_list.add(sum);	// list.get(7) 총점
			_list.add(1);	//석차용 ArrayList 1개 추가 list.get(8) 석차
			list.add(_list);                               
		}                      




		int temp;
		for(int i=0; i<list.size(); i++){
			for(int j=i+1; j<list.size() ; j++){
				if(list.get(i).get(subjects.length) < list.get(j).get(subjects.length)){	//list.get(7) 총점, 8 랭킹
					temp = list.get(i).get(subjects.length+1);
					list.get(i).set(subjects.length+1, temp+1);
				}
				else{
					if(list.get(i).get(subjects.length) != list.get(j).get(subjects.length)){
						temp = list.get(j).get(subjects.length+1);
						list.get(j).set(subjects.length+1, temp+1);
					}
				}
			}
		}

		ArrayList<Integer> tempList;
		if(list.get(0).get(subjects.length+1) > list.get(1).get(subjects.length+1)){
			tempList = list.get(0);
			list.set(0,list.get(1));
			list.set(1,tempList);
		}

		for(int i=1; i<list.size(); i++){
			tempList = list.get(i);
			String temp_name = names[i];
			int j;
			for(j=i-1; j>=0; j--){
				if(tempList.get(subjects.length+1) < list.get(j).get(subjects.length+1)){
					list.set((j+1),list.get(j));
					names[j+1] = names[j];
				}else break;
			}
			list.set(j+1, tempList);
			names[j+1] = temp_name;

		}
		////////////////// print //////////////////////////
		System.out.print("이름\t");
		for(int i=0; i<subjects.length;i++)
			System.out.print(subjects[i]+"\t");
		System.out.print("합계\t평균\t석차\n");
		
		for(int i=0; i<list.size();i++){
			System.out.print(names[i]+"\t");
			for(int j=0; j<list.get(i).size(); j++){
				System.out.print(list.get(i).get(j)+"\t");
				if(j==subjects.length)
					System.out.print(Math.round(list.get(i).get(j)/(double)subjects.length*100)/100.0+"\t");
			}
			System.out.println();
		}
		
		System.out.print("과목합계\t");
		list.add(new ArrayList<Integer>());
		for(int i=0; i<subjects.length; i++){
			int sum=0;
			for(int j=0; j<names.length; j++)
				sum+= list.get(j).get(i);
			list.get(list.size()-1).add(i, sum);
		}
		
		for(int i=0; i<subjects.length; i++)
			System.out.print(list.get(list.size()-1).get(i)+"\t");
		System.out.print("\n과목평균\t");
		for(int i=0; i<subjects.length; i++)
			System.out.print(Math.round((list.get(list.size()-1).get(i))/(double)names.length*100)/100.0+"\t");
		



	}
}