	static void itemList(Player player){
		for(int i=0; i<player.inventoryCount ; i++){
			System.out.printf("[%dë²ˆ ì•„ì´í…œ ] : %s %s  ",i+1,player.inventory[i].name,player.inventory[i].statsToString());
			if(player.inventory[i].isEquipped)
				System.out.printf("[ì¥ì°©ì¤‘]");
			if(player.inventory[i].amount > 1)
				System.out.printf(" (%dê°œ)",player.inventory[i].amount);
			System.out.print("\n");
		}

	}
	
	static void equips(int equipcode,Item item){
		switch(equipcode){
		case 0:
			System.out.printf(" í—¬ë©§ : ");
			break;
		case 1:
			System.out.printf(" ë¬´ê¸° : ");
			break;
		case 2:
			System.out.printf(" ê°‘ì˜· : ");
			break;
		case 3:
			System.out.printf(" ë°©íŒ¨ : ");
			break;
		case 4:
			System.out.printf(" ë¶€ì¸  : ");
			break;
		default:
			System.out.println("ERROR CODE 101 equipcode is invalid");
			break;
		}
		System.out.printf("%s %s\n",itemNames[item.itemcode],item.statsToString());
	}


	
