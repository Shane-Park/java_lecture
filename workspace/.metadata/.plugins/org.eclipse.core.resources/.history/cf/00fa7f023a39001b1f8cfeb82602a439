		}
		System.out.print("\nâ–  =[   ]= â–¬Î¹â•â•â•â•ïº¤ â–  HP ");System.out.printf("%3d/%3d(+%d) ",player.hp,player.hp_max-player.hp_bonus,player.hp_bonus);
