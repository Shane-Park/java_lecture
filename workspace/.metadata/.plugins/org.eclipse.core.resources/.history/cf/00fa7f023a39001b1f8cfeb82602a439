	static void showEquiplist(int equipSelect, Item[] list){
		printBar();
		switch(equipSelect){
		case 0:
			System.out.print("â›‘HELMET LISTâ›‘");
			break;
		case 1:
			System.out.print("âš”SWORD LISTâš”");
			break;
		case 2:
			System.out.print("ğŸ§¥ARMOR LISTğŸ§¥");
			break;
		case 3:
			System.out.print("â›¨SHIELD LISTâ›¨");
			break;
		case 4:
			System.out.print("ğŸ‘ŸBOOTS LISTğŸ‘Ÿ");
			break;
		}
		for(int i=0; i<list.length; i++){
			System.out.printf("\n%d. %s %s\n",i+1,list[i].name,list[i].statsToString());
		}
		printBar();
	}


