package e_oop;

import java.util.Scanner;

public class Homework_Class_Main {

	public static void main(String[] args) {
		program : while(true){
		System.out.print("기능을 선택해주세요 : (1:숙제추가, 2:숙제완료, 3:남은숙제 확인, 0:프로그램 종료) : ");
		Scanner sc = new Scanner(System.in);
		Homework_Class mine = new Homework_Class();
		
		switch( Integer.parseInt( sc.nextLine() ) ){
		case 1 :
			System.out.print("추가할 숙제를 입력해주세요: ");
			mine.addHomework( sc.nextLine() );
			break;
		case 2 :
			break;
		case 3 :
			break;
		case 0 : break program;
		
		}
		
		
		
		
		
		mine.addHomework("자바숙제");
		mine.addHomework("오라클숙제");
		System.out.println("남은숙제는 "+mine.homeworks+"입니다.");
		mine.doHomework("자바숙제");
		System.out.println("숙제는 "+mine.checkHomework()+"개 남았습니다.");
		System.out.println("남은숙제는 "+mine.homeworks+" 입니다.");

	}
	}

}
