package d_array;

import java.util.Arrays;

public class Scores {

	public static void main(String[] args) {
		/*
		 * 우리반 모두의 국어, 영어, 수학, 사회, 과학, Oracle, Java 점수를
		 * 0~100 까지 랜덤으로 생성해주시고, 아래와 같이 출력해주세요.
		 * 		  국어            영어            수학            사회            과학	     Oracle  JAVA	  합계	    평균        석차
		 * 홍길동	 90	     90	     90	     90	     90	     90	     90	     540  90.00  1
		 * 홍길동	 90	     90	     90	     90	     90	     90	     90	     540  90.00  1
		 * 홍길동	 90	     90	     90	     90	     90	     90	     90	     540  90.00  1
		 * 홍길동	 90	     90	     90	     90	     90	     90	     90	     540  90.00  1
		 * 홍길동	 90	     90	     90	     90	     90	     90	     90	     540  90.00  1
		 * 홍길동	 90	     90	     90	     90	     90	     90	     90	     540  90.00  1
		 * 홍길동	 90	     90	     90	     90	     90	     90	     90	     540  90.00  1
		 * 홍길동	 90	     90	     90	     90	     90	     90	     90	     540  90.00  1
		 *과목합계    450     450     450     450     450     450     450     540  
		 *과목평균	 90.00   90.00   90.00   90.00   90.00   90.00   90.00   
		 */
		int[][] array= new int[25][9];
		String[] names = {"정지수", "송수미", "이현기", "진예은", "윤지혜", "양지수", "정이삭", "김도윤", "박세현", "김보현", "오세일", "원정훈",
				"장병길", "문선준", "배수진","진유리", "김지훈", "김동익", "임태준", "이진수", "최희수", "박초원", "전형섭", "김보미","과목합계"};
		for(int i=0; i<array.length-1; i++){
			for(int j=0; j<array[i].length-2; j++){        // 	array[i][7]는  
				array[i][j] = (int)(Math.random() * 101);  //  		 학생별 총점
				array[i][7] += array[i][j];		           // array[24][j]는 
				array[24][j] += array[i][j];	           //		과목 합계
			}
		}
		for(int i=0; i<array.length-1;i++){             //	석차구하기
			for(int j=i+1; j<array.length; j++){        //		
				if(array[i][7] < array[j][7])           //	array[i][7]에 비교된
					array[i][8]++;                      // 	학생별 총점을 기준으로 비교
				else{                                   //
					if(array[i][7] != array[j][7])      // 	array[i][8]에 
						array[j][8]++;                  // 		석차를 저장한다
				}                                       //
			}
		}
		System.out.println("\t    국어\t    영어\t    수학\t    사회\t    과학     Oracle\tJAVA\t  합계\t 평균          석차");
		for(int i=0; i<array.length-1; i++){
			System.out.printf("%s\t%4d\t%4d\t%4d\t%4d\t%4d\t%4d\t%4d\t%4d\t%.2f\t%2d\n",names[i],array[i][0],array[i][1],
					array[i][2],array[i][3],array[i][4],array[i][5],array[i][6],array[i][7],(array[i][7])/7.0,array[i][8]+1);
		}
		System.out.printf("과목합계\t%d\t%d\t%d\t%d\t%d\t%d\t%d\n",array[24][0],array[24][1],array[24][2],
				array[24][3],array[24][4],array[24][5],array[24][6]);
		System.out.printf("과목평균\t%.2f\t%.2f\t%.2f\t%.2f\t%.2f\t%.2f\t%.2f",
				array[24][0]/24.0,array[24][1]/24.0,array[24][2]/24.0,array[24][3]/24.0,
				array[24][4]/24.0,array[24][5]/24.0,array[24][6]/24.0);

	}

}
